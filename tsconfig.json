{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler"
  },
  "include": ["src"],
  "exclude": ["templates", "node_modules", "dist"]
}
